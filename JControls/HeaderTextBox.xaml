<UserControl x:Class="JControls.HeaderTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ap="clr-namespace:JControls.AttachedProperty"
             xmlns:local="clr-namespace:JControls"
             mc:Ignorable="d"
             Height="30" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://Application:,,,/JControls;component/Themes/Style/TextBox.xaml" />
    </UserControl.Resources>
    <DockPanel>
        <Label VerticalAlignment="Center" Padding="0" Name="lb" Visibility="Collapsed"></Label>
        <TextBox DockPanel.Dock="Right" x:Name="tb2" Style="{StaticResource Hint.TextBox.Style1}" VerticalContentAlignment="Center"></TextBox>
    </DockPanel>
</UserControl>